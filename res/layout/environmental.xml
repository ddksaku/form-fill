		<LinearLayout
			android:id="@+id/environmentalLinearLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<!-- android:padding="@dimen/activityLayoutPadding" -->
			
		    <TextView			
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/panelText"                 			                                        
				android:text="@string/environmental"
				android:layout_marginTop="@dimen/cellMargin" 
				android:layout_marginBottom="@dimen/cellMargin" />
					
			<CheckBox
			    android:id="@+id/wasteWaterCheckBox" 	    		    
				android:layout_width="match_parent"      			
				android:layout_height="wrap_content"
				android:text="@string/waste_water_pickup"
				android:layout_marginBottom="@dimen/cellMargin" />
			
			<EditText 
				android:id="@+id/drainTypeEdit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:inputType="text"
				android:hint="@string/type_of_drains"
				android:layout_marginBottom="@dimen/cellMargin" />
			
			<CheckBox 	
			    android:id="@+id/spinnerCheckBox"    		    
				android:layout_width="match_parent"      			
				android:layout_height="wrap_content"
				android:text="@string/spinner"
				android:layout_marginBottom="@dimen/cellMargin" />
			
			<CheckBox 	    		    
			    android:id="@+id/dumpSiteCheckBox"
				android:layout_width="match_parent"      			
				android:layout_height="wrap_content"
				android:text="@string/dump_site_on_premises"
				android:layout_marginBottom="@dimen/cellMargin" />
			
			<CheckBox 	    		    
			    android:id="@+id/recycleWaterCheckBox"
				android:layout_width="match_parent"      			
				android:layout_height="wrap_content"
				android:text="@string/recycle_water"
				android:layout_marginBottom="@dimen/cellMargin" />		 
		</LinearLayout>							
	<!-- </com.development.visualscope.ExpandablePanel> -->					       
</LinearLayout>